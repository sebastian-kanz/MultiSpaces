{
  "name": "multispaces",
  "version": "1.0.0",
  "description": "",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "generate-types": "typechain --target=truffle-v5 './build/contracts/*.json'",
    "generate-types-client": "typechain --target=web3-v1 './build/contracts/*.json'",
    "postinstall": "rm -rf ./build && rm -rf ./types && truffle compile && yarn generate-types && yarn generate-types-client",
    "migrate": "tsc -p ./tsconfig.migrate.json --outDir migrations && truffle migrate",
    "test": "truffle test",
    "ganache-cli": "ganache-cli -p 7545 --gasLimit=0x1fffffffffffff --allowUnlimitedContractSize -e 1000000000 > /dev/null &",
    "coverage": "truffle run coverage --solcoverjs ./.solcover.js --network coverage",
    "typecheck": "tsc --noEmit",
    "deploy": "truffle deploy --network ropsten",
    "lint": "solhint 'contracts/**/*.sol'",
    "size": "truffle run contract-size",
    "format": "prettier --config .prettierrc --write \"test/**/*.+(ts)\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@openzeppelin/contracts": "^4.5.0",
    "@truffle/hdwallet-provider": "^2.0.4",
    "dotenv": "^16.0.0",
    "ganache-cli": "^6.12.2",
    "solhint": "^3.3.7",
    "truffle-contract-size": "^2.0.1"
  },
  "devDependencies": {
    "@openzeppelin/test-helpers": "^0.5.15",
    "@typechain/truffle-v5": "^8.0.1",
    "@typechain/web3-v1": "^6.0.1",
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^18.7.18",
    "@types/web3": "^1.2.2",
    "eth-gas-reporter": "^0.2.25",
    "solidity-coverage": "^0.7.22",
    "truffle": "^5.5.30",
    "truffle-hdwallet-provider": "^1.0.17",
    "truffle-typings": "^1.0.8",
    "ts-node": "^10.7.0",
    "typechain": "^8.1.0",
    "typescript": "^4.6.2",
    "web3": "^1.8.0"
  }
}
