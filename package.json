{
  "name": "multispaces",
  "version": "1.0.0",
  "description": "Blockchain based cross-plattform storage solution",
  "scripts": {
    "compile": "npx hardhat compile",
    "coverage": "npx hardhat coverage --solcoverjs ./.solcover.js --testfiles \"test/**/*.ts\"",
    "size": "npx hardhat size-contracts",
    "clean": "npx hardhat clean && rimraf build contracts/build",
    "test": "npx hardhat test",
    "accounts": "npx hardhat accounts",
    "typechain": "npx hardhat typechain",
    "deploy:mumbai": "npx hardhat run scripts/deploy.ts --network polygon_mumbai"
  },
  "author": "Sebastian Kanz",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-solhint": "^2.0.1",
    "@openzeppelin/contracts": "^4.8.0",
    "dotenv": "^16.0.3",
    "hardhat": "^2.12.4",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.2"
  }
}
